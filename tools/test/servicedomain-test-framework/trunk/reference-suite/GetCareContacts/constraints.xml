<iso:schema
        xmlns="http://purl.oclc.org/dsdl/schematron"
        xmlns:iso="http://purl.oclc.org/dsdl/schematron"
        queryBinding='xslt2'
        schemaVersion='ISO19757-3'>

    <iso:title>Validation for GetCareContacts</iso:title>
    <iso:ns prefix='urn2' uri='urn:riv:clinicalprocess:logistics:logistics:2'/>
    <iso:ns prefix='urn1' uri='urn:riv:clinicalprocess:logistics:logistics:GetCareContactsResponder:2'/>

    <!-- Rules for Request -->
    <iso:pattern name="Verify request">
        <iso:rule context="urn1:GetCareContacts" >
            <iso:assert test="(careContactId and not(sourceSystemHSAid))">If careContactId is given, sourceSystemHSAid must be given.</iso:assert>
        </iso:rule>
    </iso:pattern>

    <!-- Rules for Response -->
    <iso:pattern name="Verify careContactHeader">
        <iso:rule context="urn2:accountableHealthcareProfessional">
            <iso:assert test="count(urn2:healthcareProfessionalRoleCode) +  count(urn2:healthcareProfessionalOtherRoleCode) = 1">
                Either one of healthcareProfessionalRoleCode or healthcareProfessionalOtherRoleCode must be given.</iso:assert>
        </iso:rule>
    </iso:pattern>



</iso:schema>

<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <system.serviceModel>

    <bindings>
      <basicHttpBinding>
        <binding name="ResponderBinding">
          <security mode="Transport">
            <transport clientCredentialType="Certificate"/>
          </security>
        </binding>
      </basicHttpBinding>
    </bindings>

    <services>
      <service name="rivta_bp20_refapp_producer.Responder" behaviorConfiguration="ResponderBehavior">
        <host>
          <baseAddresses>
            <add baseAddress = "http://localhost:12001/rivtabp20/refapp/riv13606RequestEHRExtract" />
            <add baseAddress = "https://localhost:12000/rivtabp20/refapp/riv13606RequestEHRExtract" />
          </baseAddresses>
        </host>
        <endpoint address=""
                  binding="basicHttpBinding"
                  bindingConfiguration="ResponderBinding"
                  contract="rivta_bp20_refapp_schemas.wsdl.EhrExtractionResponderInterface">
        </endpoint>
      </service>
    </services>

    <behaviors>
      <serviceBehaviors>
        <behavior name="ResponderBehavior">
          <serviceMetadata httpGetEnabled="true"  httpsGetEnabled="true" />
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>
</configuration>

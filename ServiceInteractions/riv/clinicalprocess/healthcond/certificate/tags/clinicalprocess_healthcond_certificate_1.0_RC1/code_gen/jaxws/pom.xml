<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>se.riv.clinicalprocess.healtcond.certificate</groupId>
	<artifactId>clinicalprocess-healthcond-certificate-schemas</artifactId>
	<packaging>jar</packaging>
	<version>1.0-SNAPSHOT</version>
	<name>clinicalprocess-healthcond-certificate-schemas</name>
	<url>http://maven.apache.org</url>

	<properties>
		<schema.path>${basedir}/../../schemas</schema.path>
		<cxf.version>2.1.2</cxf.version>
	</properties>

	<dependencies>
		<!-- cxf dependencies -->
		<dependency>
			<groupId>org.apache.cxf</groupId>
			<artifactId>cxf-rt-frontend-jaxws</artifactId>
			<version>${cxf.version}</version>
		</dependency>
		<dependency>
			<groupId>org.apache.cxf</groupId>
			<artifactId>cxf-rt-transports-http</artifactId>
			<version>${cxf.version}</version>
		</dependency>
		<dependency>
			<groupId>org.apache.cxf</groupId>
			<artifactId>cxf-rt-transports-http-jetty</artifactId>
			<version>${cxf.version}</version>
			<!-- exkludera en som st�r !!! -->
			<exclusions>
				<exclusion>
					<groupId>org.slf4j</groupId>
					<artifactId>slf4j-jdk14</artifactId>
				</exclusion>
			</exclusions>

		</dependency>

		<!--  f�r att undvika att 2.0.8 laddas in -->
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-context</artifactId>
			<version>2.5.6</version>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-web</artifactId>
			<version>2.5.6</version>
		</dependency>

	</dependencies>
	<repositories>
		<!-- for jaxb-impl -->
		<repository>
			<id>java.net</id>
			<url>http://download.java.net/maven/1/</url>
			<layout>legacy</layout>
		</repository>
		<repository>
			<id>m2.java.net</id>
			<name>Java.net Repository for Maven2</name>
			<url>http://download.java.net/maven/2/</url>
			<layout>default</layout>
		</repository>
	</repositories>
	<pluginRepositories>
		<pluginRepository>
			<id>repository.codehaus.org</id>
			<url>http://repository.codehaus.org/</url>
		</pluginRepository>
	</pluginRepositories>

	<build>
		<plugins>

			<plugin>
				<groupId>org.apache.cxf</groupId>
				<artifactId>cxf-codegen-plugin</artifactId>
				<version>${cxf.version}</version>
				<executions>
					<execution>
						<id>generate-sources</id>
						<phase>generate-sources</phase>
						<configuration>
							<sourceRoot>${basedir}/target/generated/src/main/java</sourceRoot>
							<wsdlOptions>

								<wsdlOption>
									<extraargs>
										<extraarg>-p</extraarg>
										<extraarg>
											urn:riv:clinicalprocess:healthcond:certificate:GetCertificateForCare:1:rivtabp21=se.inera.intyg.getcertificateforcare.v1.rivtabp21</extraarg>
										<extraarg>-p</extraarg>
										<extraarg>
											urn:riv:clinicalprocess:healthcond:certificate:1=se.inera.intyg.v1
										</extraarg>
										<extraarg>-p</extraarg>
										<extraarg> urn:iso:21090:dt:1=iso.v21090.dt.v1
										</extraarg>
										<extraarg>-p</extraarg>
										<extraarg>
											urn:riv:clinicalprocess:healthcond:certificate:GetCertificateForCareResponder:1=se.inera.intyg.getcertificateforcareresponder.v1
										</extraarg>
										<extraarg>-p</extraarg>
										<extraarg>
											urn:riv:itintegration:registry:1=se.inera.itintegration.registry.v1
										</extraarg>
										<extraarg>-p</extraarg>
										<extraarg>
											urn:riv:insuranceprocess:certificate:1=se.inera.intyg.certificate.v1
										</extraarg>
									</extraargs>
									<wsdl>${schema.path}/interactions/GetCertificateForCareInteraction/GetCertificateForCareInteraction_1.0_RIVTABP21.wsdl</wsdl>
								</wsdlOption>

							</wsdlOptions>
						</configuration>
						<goals>
							<goal>wsdl2java</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
				</configuration>
			</plugin>

			<!-- When using JAX-WS RI wsimport. Not recommended. wsimport validates with none-WS-I Compliant wsdl-schema. wsimport lacks ability to manage package names for schema name spaces.
			<plugin>
				<groupId>org.codehaus.mojo</groupId>

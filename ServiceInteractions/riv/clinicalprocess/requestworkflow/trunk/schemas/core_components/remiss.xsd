<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" 
           elementFormDefault="qualified" 
           targetNamespace="urn:riv:clinicalprocess:requestworkflow:request" 
           xmlns="urn:riv:clinicalprocess:requestworkflow:request" 
           xmlns:gcda="AlschulerAssociates::GreenCDA" 
           xmlns:codes="urn:riv:clinicalprocess:requestworkflow:codes"
           attributeFormDefault="unqualified">
    <xs:import schemaLocation='green_ccd.xsd' namespace='AlschulerAssociates::GreenCDA' />
    <xs:import schemaLocation='codes.xsd' namespace='urn:riv:clinicalprocess:requestworkflow:codes' />
    
    <xs:element name="request" type="RequestType"/>

    <xs:complexType name="RequestType">
        <xs:sequence>
            <xs:element name="requestId" type="gcda:ii"/>
            <xs:element name="typeOfRequest" type="codes:kv_framstallantyp_NeR_codes"/>
            <xs:element name="versionTimeStamp" type="gcda:ts" minOccurs="0" />
            <xs:element name="versionNumber" type="xs:int"/>
            <xs:element name="reasonForVersion" type="codes:kv_e_remiss_versionsorsak" />
            
            <xs:element name="patient" type="PatientType"/>

            <xs:element name="author" type="AuthorType"/>
            <xs:element name="custodian" type="CustodianType"/>
            <xs:element name="informationRecipient" type="InformationRecipientType"/>
            <xs:element name="legalAuthenticator" type="LegalAuthenticatorType" minOccurs="0"/>
            <xs:element name="participant" type="ParticipantType" minOccurs="0"/>

            <xs:element name="additionalInformation" type="AdditionalInformationType" />
            <xs:element name="awarenessInformation" type="AwarenessInformationType" minOccurs="0" maxOccurs="unbounded" />
            <xs:element name="questionFormulation" type="QuestionFormulationType" />             
        </xs:sequence>        
    </xs:complexType>

    <xs:complexType name="PatientType">
        <xs:sequence>
            <xs:element name="personId" type="gcda:ii"/>
            <xs:element name="address" type="AddressType" minOccurs="0"/> 
            <xs:element name="telecom" type="codes:kv_telekomtyp" minOccurs="0" maxOccurs="2"/>
            <xs:element name="name" type="xs:string" minOccurs="0" />
            <xs:element name="gender" type="codes:kv_kon" minOccurs="0" />
            <xs:element name="dateOfBirth" type="gcda:ts" minOccurs="0" />
        </xs:sequence>
    </xs:complexType>
    
    <xs:complexType name="AddressType">
        <xs:sequence>
            <xs:element name="typeOfAddress" type="codes:kv_adresstyp"/>            
            <xs:element name="careOf" type="xs:string" minOccurs="0"/>
            <xs:element name="streetName1" type="xs:string"/>
            <xs:element name="streetName2" type="xs:string" minOccurs="0"/>
            <xs:element name="streetName3" type="xs:string" minOccurs="0"/>
            <xs:element name="postalCode" type="xs:string"/>
            <xs:element name="county" type="xs:string"/>
        </xs:sequence>
    </xs:complexType>
    
    <xs:complexType name="AuthorType">
        <xs:sequence>
            <xs:element name="dateOfRequest" type="gcda:ts"/>
            <xs:element name="staffId" type="gcda:ii" />
            <xs:element name="typeOfStaff" type="codes:kv_yrkeskoder" minOccurs="0" />
            <xs:element name="staffName" type="xs:string" minOccurs="0" />
            <xs:element name="careunitId" type="gcda:ii" minOccurs="0" /> <!-- Anges om HoS personal agerar ombud -->
            <xs:element name="careunitName" type="xs:string" minOccurs="0" />
            <xs:element name="caregiverId" type="gcda:ii" minOccurs="0" /> <!-- Anges om HoS personal agerar ombud -->
            <xs:element name="caregivertName" type="xs:string" minOccurs="0" />
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="CustodianType">
        <xs:sequence>
            <xs:element name="careunitId" type="gcda:ii"/>
            <xs:element name="careunitName" type="xs:string" minOccurs="0" />
            <xs:element name="caregiverId" type="gcda:ii" />
            <xs:element name="caregivertName" type="xs:string" minOccurs="0" />
        </xs:sequence>
    </xs:complexType>
    
    <xs:complexType name="InformationRecipientType">
        <xs:sequence>
            <xs:element name="staffId" type="gcda:ii" minOccurs="0" />
            <xs:element name="staffName" type="xs:string" minOccurs="0" />
            <xs:element name="careunitId" type="gcda:ii" />
            <xs:element name="careunitName" type="xs:string" minOccurs="0" />
            <xs:element name="caregiverId" type="gcda:ii" />
            <xs:element name="caregiverName" type="xs:string" minOccurs="0" />
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="LegalAuthenticatorType">
        <xs:sequence>
            <xs:element name="timeOfSigning" type="gcda:ts" />
            <xs:element name="signature" type="xs:string" minOccurs="0" />
        </xs:sequence>
    </xs:complexType>
    
    <xs:complexType name="ParticipantType">
        <xs:sequence>
            <xs:element name="staffId" type="gcda:ii" minOccurs="0" />
            <xs:element name="staffName" type="xs:string" minOccurs="0" />
            <xs:element name="careunitId" type="gcda:ii" minOccurs="1" />
            <xs:element name="careunitName" type="xs:string" minOccurs="0" />
            <xs:element name="caregiverId" type="gcda:ii" minOccurs="1" />
            <xs:element name="caregiverName" type="xs:string" minOccurs="0" />
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="AdditionalInformationType">
        <xs:sequence>
            <xs:element name="desiredDateForPerformance" type="gcda:ivlTs"/>
            <xs:element name="desiredRequestRecipient" type="xs:string" minOccurs="0" maxOccurs="unbounded"/>
            <xs:element name="administrativeInformation" type="xs:string" minOccurs="0" />
            <xs:element name="interpreterRequirement" type="xs:string" minOccurs="0" maxOccurs="unbounded" />
        </xs:sequence>
    </xs:complexType>
    <xs:complexType name="AwarenessInformationType">
        <xs:sequence>
            <xs:element name="text" type="xs:string" />
            <xs:element name="clinicalInformation" type="ClinicalInformationType" minOccurs="0" />
        </xs:sequence>
    </xs:complexType>    
        
    <xs:complexType name="QuestionFormulationType">
        <xs:sequence>
            <xs:element name="text" type="xs:string" />
            <xs:element name="desiredAction" type="DesiredActionType" minOccurs="0" maxOccurs="unbounded"/>
            <xs:element name="clinicalInformation" type="ClinicalInformationType" minOccurs="0" maxOccurs="unbounded"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="ClinicalInformationType">
        <xs:sequence>
            <xs:element name="id" type="gcda:ii"/>
            <xs:element name="code" type="gcda:ii"/> <!-- ??? -->
            <!-- <xs:element name="condition" type="gcda:cd" minOccurs="0" maxOccurs="unbounded"/>  ???? -->
            <xs:element name="description" type="xs:string" minOccurs="0"/>
            <!-- <xs:element name="action" type="ActionType" minOccurs="0" maxOccurs="unbounded"/>  ??? -->
        </xs:sequence>
    </xs:complexType>
    
    <xs:complexType name="DesiredActionType"> <!-- Vilket kodverk? -->
        <xs:sequence>
            <xs:element name="id" type="gcda:ii"/>
            <xs:element name="code" type="gcda:ii"/> <!-- ??? -->
            <xs:element name="description" type="xs:string" minOccurs="0" />
        </xs:sequence>
    </xs:complexType>

</xs:schema>
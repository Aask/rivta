<xs:schema xmlns:xs='http://www.w3.org/2001/XMLSchema' 
	xmlns:tns='urn:riv:ehr:patientconsent:administration:GetAllExtendedConsentsForPatientResponder:1'				
	xmlns:patientconsent='urn:riv:ehr:patientconsent:1'
	xmlns:common='urn:riv:ehr:common:1'
	targetNamespace='urn:riv:ehr:patientconsent:administration:GetAllExtendedConsentsForPatientResponder:1'
	elementFormDefault='qualified'
	attributeFormDefault='unqualified'
	version='1.0'>

	<xs:import schemaLocation='../../Patientconsent_1.0.xsd' namespace='urn:riv:ehr:patientconsent:1' />
	<xs:import schemaLocation='../../../common/Common_1.0.xsd' namespace='urn:riv:ehr:common:1' />

	<xs:element name="UnauthorizedFault" type="common:UnauthorizedFaultType"/>
	<xs:element name="ValidationErrorFault" type="common:ValidationErrorFaultType"/>
	<xs:element name="InternalErrorFault" type="common:InternalErrorFaultType"/>

	<xs:element name='GetAllExtendedConsentsForPatientRequest' type='tns:GetAllExtendedConsentsForPatientRequestType'/>

	<xs:complexType name='GetAllExtendedConsentsForPatientRequestType'>
		<xs:annotation>
		    <xs:documentation xml:lang='sv'>
		        Tjänst som läser alla registrerade samtyckesintyg för patient oavsett vårdgivare med utökad information.
		        Det är valbart om ogiltiga (makulerade, återkallade och utgångna) samtyckesintyg skall returneras. 		        
		        Tjänsten kan användas för att ge patienten en sammanställning av för denne registrerade samtycken till direktåtkomst.
		    </xs:documentation>
		</xs:annotation>
		<xs:sequence>
			<xs:element name="PatientId" type="common:PersonIdValue"/>
			<xs:element name="GetCancelledFlag" type="xs:boolean"/>
			<xs:any maxOccurs="unbounded" minOccurs="0" namespace="##other" processContents="lax"/>
		</xs:sequence>
	</xs:complexType>

	<xs:element name='GetAllExtendedConsentsForPatientResponse' type='tns:GetAllExtendedConsentsForPatientResponseType'/>

	<xs:complexType name='GetAllExtendedConsentsForPatientResponseType'>
		<xs:annotation>
		    <xs:documentation xml:lang='sv'>
		        Tjänst som läser alla registrerade samtyckesintyg för patient oavsett vårdgivare med utökad information.
		        Det är valbart om ogiltiga (makulerade, återkallade och utgångna) samtyckesintyg skall returneras. 		        
		        Tjänsten kan användas för att ge patienten en sammanställning av för denne registrerade samtycken till direktåtkomst.
		    </xs:documentation>
		</xs:annotation>
		<xs:sequence>
			<xs:element name="ExtendedPDLAssertionType" type="patientconsent:ExtendedPDLAssertionType" maxOccurs="unbounded"/>
			<xs:any maxOccurs="unbounded" minOccurs="0" namespace="##other" processContents="lax"/>
		</xs:sequence>
	</xs:complexType>
</xs:schema>

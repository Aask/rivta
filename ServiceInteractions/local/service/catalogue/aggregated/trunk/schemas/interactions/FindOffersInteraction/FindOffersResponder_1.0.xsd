<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
  xmlns:tns="urn:riv:service:catalogue:FindOffersResponder:1"
  xmlns:core="urn:riv:service:catalogue:1"
  targetNamespace="urn:riv:service:catalogue:FindOffersResponder:1" elementFormDefault="qualified"
  attributeFormDefault="unqualified" version="1.0">
  <xs:import schemaLocation="../../core_components/service_catalogue_1.0.xsd"
    namespace="urn:riv:service:catalogue:1"/>

  <xs:element name="FindOffers" type="tns:FindOffersType"/>
  <xs:element name="FindOffersResponse" type="tns:FindOffersResponseType"/>

  <xs:complexType name="FindOffersType">
    <xs:annotation>
      <xs:documentation>En eller flera sökparametrar kan anges för att hitta utbudspunkter.</xs:documentation>
    </xs:annotation>
    <xs:sequence>
      <xs:element maxOccurs="unbounded" minOccurs="0" name="hsaId" type="core:HsaIdType">
        <xs:annotation>
          <xs:documentation>Sökning baserad på exakt match av HSAid.</xs:documentation>
        </xs:annotation>
      </xs:element>
      <xs:element name="relativeDistinguishedName" type="xs:string" minOccurs="0">
        <xs:annotation>
          <xs:documentation>Wildcard-sökning baserat på RDN i HSA.
          Exempel:
            Ögonklinik
            Stockholm
            Göteborg</xs:documentation>
        </xs:annotation>
      </xs:element>
      <xs:element name="productCode" type="core:CVType" minOccurs="0" maxOccurs="unbounded">
        <xs:annotation>
          <xs:documentation>Sökning baserat på produktkod.</xs:documentation>
        </xs:annotation>
      </xs:element>
      <xs:element maxOccurs="unbounded" minOccurs="0" name="countyCode" type="xs:string">
        <xs:annotation>
          <xs:documentation>Länskod enligt SCB.
        </xs:documentation>
        </xs:annotation>
      </xs:element>
      <xs:element name="productProperties" type="core:CVType" minOccurs="0" maxOccurs="unbounded">
        <xs:annotation>
          <xs:documentation>Sökning baserad på egenskaper som finns på produkter, kod/kodverk exempelvis HSA verksamhetskoder.</xs:documentation>
        </xs:annotation>
      </xs:element>
      <xs:element name="supportedInteractions" type="core:SupportedInteractionsType" minOccurs="0">
        <xs:annotation>
          <xs:documentation>Sökning baserad på RIVTA interaktioner,
            Exempel: 
              clinicalprocess:requestworkflow:ProcessRequest</xs:documentation>
        </xs:annotation>
      </xs:element>
      <xs:any namespace="##other" processContents="lax" minOccurs="0" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="FindOffersResponseType">
    <xs:sequence>
      <xs:element name="offers" type="core:OfferType" minOccurs="0" maxOccurs="unbounded"/>
      <xs:any namespace="##other" processContents="lax" minOccurs="0" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>
</xs:schema>

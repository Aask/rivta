<testsuite>
    <id>GetCapacities</id>
    <description>This testsuite is designed to verify the GetCapacities contract.</description>
    <globaldata>
        <webServiceUrl>http://localhost:8088/mockGetCapacitiesResponderBinding</webServiceUrl>
    </globaldata>
    <testcase id="Simple search">
        <description>Verifies that the result...
        </description>
        <data>
            <logicalAddress>112233</logicalAddress>
            <hsaId>SE-TEST</hsaId>
            <relativeDistinguishedName>Some RDN</relativeDistinguishedName>
            <code>1810</code>
            <codeSystem>1.2.752.129.2.2.1.3</codeSystem>
            <!-- Add a list of comma-separated ids that at least should be included in the response -->
            <expectedHsaId>SE-TEST,SE-TEST-RDN,SE-TEST-CODE,SE-TEST-PRODUCTNAME,SE-TEST-SUPPORTEDINTERACTIONS</expectedHsaId>
        </data>
    </testcase>
    <testcase id="Empty search">
        <description>Verifies that the result...
        </description>
        <data>
            <logicalAddress>112233</logicalAddress>
        </data>
    </testcase>
    <testcase id="Multiple search">
        <description>Verifies that the result...
        </description>
        <data>
            <logicalAddress>112233</logicalAddress>
            <hsaId>SE-TEST</hsaId>
            <relativeDistinguishedName>Some RDN</relativeDistinguishedName>
            <!-- Add a list of comma-separated ids that at least should be included in the response -->
            <expectedHsaId>SE-TEST,SE-TEST-RDN,SE-TEST-CODE,SE-TEST-PRODUCTNAME,SE-TEST-SUPPORTEDINTERACTIONS</expectedHsaId>
        </data>
    </testcase>
</testsuite>
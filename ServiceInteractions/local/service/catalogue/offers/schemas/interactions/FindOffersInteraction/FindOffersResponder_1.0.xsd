<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
  xmlns:tns="urn:riv:service:catalogue:FindContentResponder:1"
  xmlns:core="urn:riv:service:catalogue:1"
  targetNamespace="urn:riv:service:catalogue:FindContentResponder:1" elementFormDefault="qualified"
  attributeFormDefault="unqualified" version="1.0">
  <xs:import schemaLocation="../../core_components/service_catalogue_offers_1.0.xsd"
    namespace="urn:riv:service:catalogue:1"/>

  <xs:element name="FindOffers" type="tns:FindOffersType"/>
  <xs:element name="FindOffersResponse" type="tns:FindOffersResponseType"/>

  <xs:complexType name="FindOffersType">
    <xs:annotation>
      <xs:documentation>One or all elements can be used to narrow down the search.</xs:documentation>
    </xs:annotation>
    <xs:sequence>
      <xs:element name="careUnitName" type="xs:string" minOccurs="0">
        <xs:annotation>
          <xs:documentation>Care unit name can be the whole name or a part of a name, the producer must ensure that proper wildcards is used.</xs:documentation>
        </xs:annotation>
      </xs:element>
      <xs:element name="typeOfCare" type="core:TypeOfCareType" minOccurs="0">
        <xs:annotation>
          <xs:documentation>HSA.verksamhetskoder</xs:documentation>
        </xs:annotation>
      </xs:element>
      <xs:element name="typeOfCareServices" type="core:CauseType" minOccurs="0">
        <xs:annotation>
          <xs:documentation>Causetypes can be either KVÃ… or...</xs:documentation>
        </xs:annotation>
      </xs:element>
      <xs:element name="supportedInteractions" type="core:SupportedInteractionsType" minOccurs="0">
        <xs:annotation>
          <xs:documentation>Servcice domain interactions like clinicalprocess:requestworkflow:ProcessRequest can be used here.</xs:documentation>
        </xs:annotation>
      </xs:element>
      <xs:any namespace="##other" processContents="lax" minOccurs="0" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="FindOffersResponseType">
    <xs:sequence>
      <xs:element name="service" type="core:ServiceType" minOccurs="0" maxOccurs="unbounded"/>
      <xs:any namespace="##other" processContents="lax" minOccurs="0" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>
</xs:schema>
